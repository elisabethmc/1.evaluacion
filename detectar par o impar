#Leemos 5 números enteros
#sumamos los pares por un lado
#sumamos los impares por otro
def suma_par_impar():
    suma_par=0
    suma_impar=0
    for cont in range(1,6):
        num=int(input("Dame un número:"))
        if(num%2==0):
            print("ES PAR")#rama del verdadero
            suma_par=suma_par+num
        else:
            print("ES IMPAR")#rama del falso
            suma_impar=suma_imar+num
    print("la suma de los pares= "+str(suma_par))
    print("la suma de los imapres="+str(suma_impar))
    
suma_par_impar() 
